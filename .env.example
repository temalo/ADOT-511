# ADOT API Configuration
ADOT_API_KEY=your_api_key_here
ADOT_API_BASE_URL=https://api.az511.gov/api/v2

# Meshtastic Connection Configuration
# Connection type: "serial" or "tcp"
MESHTASTIC_CONNECTION_TYPE=serial

# Serial connection settings (if using serial)
MESHTASTIC_DEVICE_PATH=COM3
# Or for Linux: /dev/ttyUSB0

# TCP connection settings (if using tcp)
# MESHTASTIC_TCP_HOST=192.168.1.100
# MESHTASTIC_TCP_PORT=4403

# Polling interval in seconds
POLL_INTERVAL=300
